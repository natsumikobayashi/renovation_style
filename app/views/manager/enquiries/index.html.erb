<div class="container">
  <div class="page-tittle mt-5">
    問い合わせ一覧
  </div>

  <% if current_manager.enquiries.exists? %>
  <div class="row itembar font-weight-bold">
    <div class="col-lg-1">
      日付
    </div>
    <div class="col-lg-2">
      名前
    </div>
    <div class="col-lg-2">
      電話番号
    </div>
    <div class="col-lg-3">
      メールアドレス
    </div>
    <div class="col-lg-2">
      ステータス
    </div>
    <div class="col-lg-2">
      詳細ボタン
    </div>
  </div>

  <% @enquiries.each do |enquiry| %>
  <div class="row text mt-2">
    <div class="col-lg-1">
      <%= l enquiry.created_at, format: :short %>
    </div>
    <div class="col-lg-2">
      <%= enquiry.customer.name %>
    </div>
    <div class="col-lg-2">
      <%= enquiry.customer.telephone_number %>
    </div>
    <div class="col-lg-3">
      <%= enquiry.customer.email %>
    </div>
    <div class="col-lg-2">
      <%= enquiry.status_i18n %>
    </div>
    <div class="col-lg-2">
      <%= link_to '詳細', manager_enquiry_path(enquiry.id), class: "btn" %>
    </div>
  </div>
  <% end %>

  <div class="pagination justify-content-center">
    <%= paginate @enquiries %>
  </div>

  <% else %>

  <div class="row">
   <div class="col-lg-12 text-center mt-5">
     <div class="no-favorite">
      登録がありません
     </div>
     <%= image_tag '段ボール箱　12.png', :size => '300x200' %>
   </div>
  </div>

  <% end %>
</div>