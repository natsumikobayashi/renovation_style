<div class="container">
  <div class="page-tittle mt-5">
    問い合わせ一覧
  </div>

  <% if current_manager.enquiries.exists? %>
    <div class="d-none d-lg-block">
      <div class="row itembar">
        <div class="col-lg-1">
          日付
        </div>
        <div class="col-lg-2">
          名前
        </div>
        <div class="col-lg-2">
          電話番号
        </div>
        <div class="col-lg-3">
          メールアドレス
        </div>
        <div class="col-lg-2">
          ステータス
        </div>
        <div class="col-lg-2">
          詳細ボタン
        </div>
      </div>
    </div>

  <% @enquiries.each do |enquiry| %>
  <div class="row text mt-2">
    <div class="col-lg-1">
      <div class="d-block d-lg-none">
        投稿日
      </div>
      <%= l enquiry.created_at, format: :short %>
    </div>
    <div class="col-lg-2">
      <div class="d-block d-lg-none">
        投稿日
      </div>
      <%= enquiry.customer.name %>
    </div>
    <div class="col-lg-2">
      <%= enquiry.customer.telephone_number %>
    </div>
    <div class="col-lg-3">
      <%= enquiry.customer.email %>
    </div>
    <div class="col-lg-2">
      <%= enquiry.status_i18n %>
    </div>
    <div class="col-lg-2">
      <%= link_to '詳細', manager_enquiry_path(enquiry.id), class: "btn" %>
    </div>
  </div>
  <% end %>

<!--<nav aria-label="Page navigation example">-->
