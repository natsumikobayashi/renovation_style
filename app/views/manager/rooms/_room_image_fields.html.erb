<div class="nested-fields">
  <div class="form-group">
    <label>室内写真を選択ください</label>
     <div><%= f.file_field :image, accept: "image/*" %></div>
    <%= image_tag f.object.image.variant(resize_to_limit: [300, 200]) if f.object.image.attached? %>
  </div>
  <div class="form-group">
    <label>カテゴリを入力ください(リビング・居室など)</label>
    <div><%= f.text_field :name %></div>
  </div>
  <div class="mt-2">
   <%= link_to_remove_association "室内写真削除", f, class: "delete" %>
  </div>
</div>