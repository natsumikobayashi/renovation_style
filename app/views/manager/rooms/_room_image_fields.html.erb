<div class="nested-fields m-1 text">
  <div class="form-group">
   <div class="text-center">
     <%= image_tag f.object.image, class: "imageItemedit" if f.object.image.attached? %>
   </div>
      <% unless f.object.image.attached? %>
       <label>室内写真を選択ください</label>
      <% end %>
     <div class="text m-1">
       <% if f.object.image.attached? %>
        変更する<i class="fa-regular fa-circle-down"></i>
       <% end %>
       <%= f.file_field :image, accept: "image/*" %>
     </div>
  </div>
  <div class="form-group m-1">
    <div>カテゴリ<i class="fa-regular fa-circle-down"></i>
     <%= f.text_field :name, :placeholder => "1～20文字まで", class: 'form-control' %></div>
  </div>
  <div class="m-2 text-center">
   <%= link_to_remove_association "室内写真削除", f, class: "delete" %>
  </div>
</div>