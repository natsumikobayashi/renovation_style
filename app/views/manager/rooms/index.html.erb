<div class="container">

  <div class="row mt-5">
    <div class="col-lg-8">
      <div class="page-tittle">
       投稿一覧
      </div>
    </div>
    <div class="col-lg-4 text-right">
      <%= link_to '新規投稿', new_manager_room_path, class: "btn" %>
    </div>
  </div>

 <% if current_manager.rooms.exists? %>
  <div class="d-none d-lg-block">
    <div class="row itembar">
      <div class="col-lg-3 text">
        投稿日
      </div>
      <div class="col-lg-5 text">
        部屋情報
      </div>
      <div class="col-lg-4 text">
        詳細ボタン
      </div>
    </div>
  </div>
  <% @rooms.each do |room| %>
  <div class="row mb-4">
      <div class="col-lg-3 text mb-2">
        <div class="d-block d-lg-none">
          投稿日
        </div>
       <%= l room.created_at, format: :long %>
      </div>
      <div class="col-lg-5 text mb-2">
        <div class="d-block d-lg-none">
          部屋情報
        </div>
       <div>
         <%= room.catchphrase %>
       </div>
       <div>
         #<%= room.taste_tag.name %> #<%= room.floor_plan.floor_name %>
        </div>
      </div>
      <div class="col-lg-4 text">
       <%= link_to '詳細', manager_room_path(room.id), class: "btn" %>
    </div>
   </div>
  <% end %>
  <% else %>

  <div class="row">
   <div class="col-lg-12 text-center mt-5">
     <div class="no-favorite">
      登録がありません
     </div>
     <%= image_tag '段ボール箱　12.png', :size => '200x140' %>
   </div>
    </div>

  <% end %>

  <div class="pagination justify-content-center">
   <%= paginate @rooms %>
  </div>

</div>