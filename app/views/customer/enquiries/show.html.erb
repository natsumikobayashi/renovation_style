<div class="container">

 <div class="page-tittle text-center mt-5">
   問い合わせ詳細
 </div>

   <div class="row">
    <div class="col-lg-8 mx-auto">

     <div class="row m-2">
      <div class="col-lg-4 item-tittle">
       日付
      </div>
      <div class="col-lg-8 enquiey-detail">
       <%= l @enquiry.created_at, format: :long %>
      </div>
     </div>

     <div class="row m-2">
      <div class="col-lg-4 item-tittle">
       部屋情報
      </div>
      <div class="col-lg-8 enquiey-detail">
       <% if @enquiry.room.is_deleted == false %>
        <%= link_to customer_room_path(@enquiry.room_id) do %>
          <%= @enquiry.room.catchphrase %>
        <% end %>
       <% else %>
         掲載終了しております
       <% end %>
      </div>
     </div>

     <div class="row m-2">
      <div class="col-lg-4 item-tittle">
       リフォーム会社
      </div>
      <div class="col-lg-8 enquiey-detail">
       <% if @enquiry.manager.is_deleted == false %>
        <div class="text"><%= @enquiry.manager.name %></div>
        <div class="text">電話番番号:<%= @enquiry.manager.telephone_number %></div>
        <div class="text">メールアドレス：<%= @enquiry.manager.email %></div>
       <% else %>
        <div class="text">退会しております</div>
       <% end %>
     </div>
    </div>

    <div class="row m-2">
     <div class="col-lg-4 col-12 item-tittle">
      問い合わせ内容
     </div>
     <div class="col-lg-8 col-12 enquiey-detail">
      <%= @enquiry.content %>
      </div>
    </div>

    </div>
   </div>

   <div class="text-center m-5">
    <%= link_to '問い合わせ一覧へ', customer_enquiries_path, class: "btn btn-outline-dark" %>
   </div>

</div>