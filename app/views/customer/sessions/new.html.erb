<div class="container">

   <div class="page-tittle mt-5 text-center">
     Login
   </div>

    <%= form_with model: @customer, url: session_path(resource_name) do |f| %>
     <div class="row">
      <div class="col-lg-7 mx-auto">

       <div class="form-group item-tittle">
        <div class="row">
         <div class="col-lg-4 d-flex align-self-center justify-content-center">
          <%= f.label :email, 'メールアドレス', class: 'm-0' %>
         </div>
         <div class="col-lg-8">
          <%= f.text_field :email, class: 'form-control' %>
         </div>
        </div>
       </div>

       <div class="form-group item-tittle">
        <div class="row">
         <div class="col-lg-4 d-flex align-self-center justify-content-center">
          <%= f.label :password, 'パスワード', class: 'm-0' %>
         </div>
         <div class="col-lg-8">
          <%= f.password_field :password, class: 'form-control' %>
         </div>
        </div>
       </div>

   　 　</div>
  　　　</div>

      <div class="text-center m-3" >
   　　  <%= f.submit "ログイン", class: "submitButton" %>
   　　 </div>
  　 <% end %>

  　  <div class="p-3 text text-center">
   　　 会員登録がお済みでない方は<%= link_to 'こちら', new_customer_registration_path, class: "link" %>
 　　 </div>

 </div>