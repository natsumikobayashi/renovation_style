<div class="wrap">
 <div class="d-flex justify-content-center align-items-center h-100">
  <div class="row">
    <div class="col" style="text-align: center;">
     <div class="m-3 page-tittle">Login</div>
      <%= form_with model: @customer, url: session_path(resource_name) do |f| %>
       <div class="field d-flex justify-content-center m-2">
         <div class="form-item">Email</div>
         <div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
         </div>
       </div>

       <div class="field d-flex justify-content-center m-2">
         <div class="form-item">Pass word</div>
         <div>
          <%= f.password_field :password, autocomplete: "current-password" %>
         </div>
       </div>

       <div class="actions m-3" >
       <%= f.submit "ログイン", class: "submitButton" %>
      </div>
     <% end %>
     <div class="p-3 text">
      会員登録がお済みでない方は<%= link_to 'こちら', new_customer_registration_path, class: "link" %>へ
     </div>
    </div>
  </div>
  </div>
</div>