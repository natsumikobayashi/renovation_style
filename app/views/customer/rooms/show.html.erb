<div class="container text-align-center">

    <div class="room-detail-tittle">
      <%= @room.catchphrase %>
    </div>

      <div class="room-detail-image-item">
      <%= image_tag @room.main_image.variant(resize_to_limit: [500, 370]) if @room.main_image.attached? %>
      </div>
      <div class="room-detail-image">
      <% if @room.image_before.attached? %>
        <div class="room-detail-image-item">
          <p>before</p>
           <%= image_tag @room.image_before.variant(resize_to_limit: [300, 300]) if @room.image_before.attached? %>
        </div>
        <div class="room-detail-image-item">
          <p>after</p>
          <%= image_tag @room.image_after.variant(resize_to_limit: [300, 300]) if @room.image_after.attached? %>
        </div>
       <% else %>
        <div class="room-detail-image-item">
         <%= image_tag @room.image_after.variant(resize_to_limit: [300, 300]) if @room.image_after.attached? %>
        </div>
       <% end %>
    </div>
    <% @room.room_images.each do |room_image| %>
      <div class="room-detail-image-item">
      <%= image_tag room_image.image.variant(resize_to_limit: [500, 370]) if room_image.image.attached? %>
     </div>
    <% end %>

  <div class="room-detail-text">
    <div class="room-detail-text-item">
      <p>注文者様の要望</p>
       <%= @room.user_comment %>
    </div>
    <div class="room-detail-text-item">
     <p>リフォームポイント</p>
       <%= @room.owner_comment %>
    </div>
    <div class="room-detail-text-item">
     #<%= @room.floor_plan.floor_name %>
    </div>
    <div class="room-detail-text-item">
     <p>リフォームポイント</p>
       <%= @room.owner_comment %>
    </div>
   </div>


   <div>
      <label>施工会社</label>
      <ul class="room_manager_detail" style="list-style: none;">
       <li class="room_manager_detail">
         <%= @room.manager.name %>
       </li>
       <li class="room_manager_detail">
         <%= @room.manager.catchphrase %>
       </li>
      </ul>
      <div class="row">
       <% @room.manager.images.each do |image| %>
        <div class="col">
         <%= image_tag image.variant(resize_to_limit: [200, 150]) %>
        </div>
       <% end %>
      </div>
   </div>

   <div class="row">
     <div class="col">
      <table class="mx-auto">
        <tr>
          <td>会社住所</td>
          <td><%= @room.manager.address %></td>
        </tr>
        <tr>
          <td>対応エリア</td>
          <td><%= @room.manager.area.name %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @room.manager.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @room.manager.email %></td>
        </tr>
        <tr>
         <td>定休日・営業時間</td>
         <td><%= @room.manager.reqular_holiday %></td>
        </tr>
        <tr>
         <td>ホームページ</td>
         <td><%= @room.manager.home_page %></td>
        </tr>
      </table>
     </div>
   </div>

   <div class="row">
     <div class="col" id="favorite-link-<%= @room.id %>">
       <%= render 'customer/favorites/favorite', room: @room %>
     </div>
   </div>

   <div class="row">
    <div class="col">
      <%= form_with model: @enquiry, url: customer_enquiries_new_path do |f| %>
       <%= f.hidden_field :room_id, :value => @room.id %>
       <%= f.hidden_field :manager_id, :value => @room.manager_id %>
       <%= f.submit "この会社に問い合わせをする", class: "btn btn-outline-dark" %>
      <% end %>
    </div>
   </div>

</div>