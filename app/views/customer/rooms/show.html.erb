<div class="container text-align-center">

    <div class="room-detail-tittle font-weight-bold text-center pt-5">
      <%= @room.catchphrase %>
    </div>

    <div class="row">
     <div class="col-lg-6" style="text-align: center;">
      <div>
       <%= image_tag @room.main_image.variant(resize_to_limit: [500, 370]) if @room.main_image.attached? %>
      </div>
      <div class="d-flex justify-content-around">
       <% if @room.image_before.attached? %>
        <div class="m-2">
         <p class="text-align-center">Before</p>
          <%= image_tag @room.image_before.variant(resize_to_limit: [300, 300]) if @room.image_before.attached? %>
        </div>
        <div class="m-2">
         <p class="text-align-center">After</p>
          <%= image_tag @room.image_after.variant(resize_to_limit: [300, 300]) if @room.image_after.attached? %>
        </div>
       <% else %>
        <div class="m-2">
         <%= image_tag @room.image_after.variant(resize_to_limit: [300, 300]) if @room.image_after.attached? %>
        </div>
       <% end %>
      </div>
     <% @room.room_images.each do |room_image| %>
      <div class="m-2">
       <p><%= room_image.name %></p>
       <%= image_tag room_image.image.variant(resize_to_limit: [500, 370]) if room_image.image.attached? %>
      </div>
     <% end %>
     </div>

     <div class="col-lg-6">
      <div class="room-detail-text" style="text-align: center;">
       <div class="m-4">
        <div class="room-detail-text-tittle">リフォーム前のお悩み
         <i class="fa-regular fa-comment"></i>
        </div>
        <div>
         <%= @room.user_comment %>
        </div>
       </div>
       <div class="m-4">
        <div class="room-detail-text-tittle">リフォーム会社のコメント
         <i class="fa-regular fa-lightbulb"></i>
        </div>
        <div>
         <%= @room.owner_comment %>
        </div>
       </div>
       <div class="m-4">
        #<%= @room.floor_plan.floor_name %> #<%= @room.taste_tag.name %>
       </div>
     </div>


     <div class="manager p-3" style="text-align: center;">
      <div class="room-detail-text-tittle">施工会社 <i class="fa-solid fa-building"></i></div>
       <ul class="manager-detail" style="list-style: none;">
        <li class="manager-detail-name">
         <%= @room.manager.name %>
        </li>
        <li class="manager-detail-text">
         <%= @room.manager.catchphrase %>
       </li>
      </ul>
       <% @room.manager.images.each do |image| %>
        <div>
         <%= image_tag image.variant(resize_to_limit: [200, 150]) %>
        </div>
       <% end %>
      <table class="mx-auto m-2">
        <tr>
          <td>会社住所</td>
          <td><%= @room.manager.address %></td>
        </tr>
        <tr>
          <td>対応エリア</td>
          <td><%= @room.manager.area.name %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @room.manager.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @room.manager.email %></td>
        </tr>
        <tr>
         <td>定休日・営業時間</td>
         <td><%= @room.manager.reqular_holiday %></td>
        </tr>
        <tr>
         <td>ホームページ</td>
         <td><%= @room.manager.home_page %></td>
        </tr>
      </table>
     </div>


   <div class="favorite m-3" id="favorite-link-<%= @room.id %>">
    <%= render 'customer/favorites/favorite', room: @room %>
   </div>

   <div class="enquiry-btn m-3" style="text-align: center;">
     <% if customer_signed_in? %>
      <% if current_customer.enquiries.find_by(room_id: @room.id) %>
       <%= link_to "問い合わせ済み", customer_enquiry_path(@room.id), class: "btn" %>
      <% end %>
      <% else %>
       <%= form_with model: @enquiry, url: customer_enquiries_new_path do |f| %>
       <%= f.hidden_field :room_id, :value => @room.id %>
       <%= f.hidden_field :manager_id, :value => @room.manager_id %>
       <%= f.submit "問い合わせをする", class: "submitButton" %>
      <% end %>
     <% end %>
   </div>

  </div>
 </div>

</div>