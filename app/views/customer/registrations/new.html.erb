<div class="container">

   <div class="row">
      <div class="col-lg-12 col-sm-10 p-3"style="text-align: center;">
       <div class="m-3 page-tittle">Sign up</div>
       <div class="explanation">お気に入り登録・お問い合わせを行う際は会員登録が必須です</div>
       <%= render "customer/shared/error_messages", resource: resource, sort: ["名前", "メールアドレス", "電話番号", "パスワード"] %>
      </div>
   </div>

   <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>

     <div class="row">
      <div class="col-lg-7 mx-auto">

       <div class="form-group item-tittle">
        <div class="row">
         <div class="col-lg-4 d-flex align-self-center justify-content-center">
          <%= f.label :name, '名前', class: 'm-0' %>
         </div>
         <div class="col-lg-8">
          <%= f.text_field :name, class: 'form-control' %>
         </div>
        </div>
       </div>

       <div class="form-group item-tittle">
        <div class="row">
         <div class="col-lg-4 d-flex align-self-center justify-content-center">
          <%= f.label :email, 'メールアドレス', class: 'm-0' %>
         </div>
         <div class="col-lg-8">
          <%= f.text_field :email, class: 'form-control' %>
         </div>
        </div>
       </div>

    <div class="form-group item-tittle">
     <div class="row">
      <div class="col-lg-4 d-flex align-self-center justify-content-center">
       <%= f.label :telephone_number, '電話番号', class: 'm-0' %>
      </div>
      <div class="col-lg-8">
       <%= f.text_field :telephone_number, class: 'form-control' %>
      </div>
     </div>
    </div>

    <div class="form-group item-tittle">
     <div class="row">
      <div class="col-lg-4 d-flex align-self-center justify-content-center">
       <%= f.label :password, 'パスワード', class: 'm-0' %>
      </div>
      <div class="col-lg-8">
       <%= f.password_field :password, placeholder: '６文字以上',  class: 'form-control' %>
      </div>
     </div>
    </div>

    <div class="form-group item-tittle">
     <div class="row">
      <div class="offset-0 offset-lg-4 col-lg-8">
       <%= f.password_field :password_confirmation, placeholder: 'パスワード確認用',  class: 'form-control' %>
      </div>
     </div>
    </div>

  </div>
 </div>

     <div class="text-center m-3">
      <%= f.submit "登録する", class: "submitButton"%>
     </div>
    <% end %>
     <div class="p-3 text text-center">
      既に会員の方は<%= link_to 'こちら', new_customer_session_path, class: "link" %>へ
     </div>

</div>