<div class="container">
  <div class="tittle">ユーザー一覧</div>

   <div class="row">
    <div class="col">
      登録日
    </div>
    <div class="col">
      名前
    </div>
    <div class="col">
      電話番号
    </div>
    <div class="col">
      メールアドレス
    </div>
    <div class="col">
      お気に入り数
    </div>
    <div class="col">
      問い合わせ数
    </div>
    <div class="col">
      退会ステータス
    </div>
   </div>

   <% @customers.each do |customer| %>
   <div class="row">
     <div class="col">
       <%= l customer.created_at, format: :short %>
     </div>
     <div class="col">
       <%= customer.name %>
     </div>
     <div class="col">
       <%= customer.telephone_number %>
     </div>
     <div class="col">
       <%= customer.email %>
     </div>
     <div class="col">
       <%= customer.enquiries.count %>
     </div>
     <div class="col">
       <%= customer.favorites.count %>
     </div>
     <div class="col">
       <% if customer.is_deleted == false %>
         有効
        <% else %>
         退会
       <% end %>
     </div>
   </div>
   <% end %>

</div>