<div class="container">
  <div class="page-tittle mt-5">
     Log In
  </div>

 <%= form_with model: @observer, url: new_observer_session_path do |f| %>

   <div class="form-group">
   <div class="row">
    <div class="col-lg-3">
     <div class="form-item">メールアドレス</div>
     <div><%= f.email_field :email, autofocus: true, class: 'form-control' %></div>
    </div>
   </div>
  </div>

   <div class="form-group">
   <div class="row">
    <div class="col-lg-3">
     <div class="form-item">ログインID</div>
     <div><%= f.text_field :login_id, autofocus: true, class: 'form-control' %></div>
    </div>
   </div>
  </div>

   <div class="form-group">
   <div class="row">
    <div class="col-lg-3">
     <div class="form-item">パスワード</div>
     <div><%= f.password_field :password, autofocus: true, class: 'form-control' %></div>
    </div>
   </div>
  </div>

  <div class="actions m-3">
    <%= f.submit "ログイン", class: "submitButton" %>
  </div>
<% end %>

</div>