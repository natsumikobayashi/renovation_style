<div class="container">
  <div class="tittle">リフォーム会社一覧</div>

   <div class="row">
    <div class="col">
      登録日
    </div>
    <div class="col">
      会社名
    </div>
    <div class="col">
      電話番号
    </div>
    <div class="col">
      メールアドレス
    </div>
    <div class="col">
      ホームページ
    </div>
    <div class="col">
      退会ステータス
    </div>
   </div>

   <% @managers.each do |manager| %>
   <div class="row">
     <div class="col">
       <%= l manager.created_at, format: :short %>
     </div>
     <div class="col">
       <%= manager.name %>
     </div>
     <div class="col">
       <%= manager.telephone_number %>
     </div>
     <div class="col">
       <%= manager.email %>
     </div>
     <div class="col">
       <%= manager.home_page %>
     </div>
     <div class="col">
       <% if manager.is_deleted == false %>
         有効
        <% else %>
         退会
       <% end %>
     </div>
   </div>
   <% end %>

</div>