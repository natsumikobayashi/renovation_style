<div class="container">
  <div class="page-tittle pt-5">
    リフォーム会社一覧
  </div>

 <div class="row text text-center m-1">
   <div class="col-lg-2">
     登録日
   </div>
   <div class="col-lg-4">
     <div>
       会社名情報
     </div>
   </div>
   <div class="col-lg-2">
      投稿数 <i class="fa-solid fa-file-pen"></i>
   </div>
   <div class="col-lg-2">
      問い合わせ数 <i class="fa-regular fa-paper-plane"></i>
   </div>
   <div class="col-lg-2">
      <i class="fa-solid fa-ban"></i>
   </div>
 </div>

 <% @managers.each do |manager| %>
  <div class="row text m-1 text-center">
   <div class="col-lg-2">
     <%= l manager.created_at, format: :long %>
   </div>
   <div class="col-lg-4">
      会社名：<%= manager.name %><br>
      電話番号：<%= manager.telephone_number %><br>
      メールアドレス：<%= manager.email %><br>
      ホームページ：<%= manager.home_page %><br>
   </div>
   <div class="col-lg-2">
     <%= manager.rooms.count %>
   </div>
   <div class="col-lg-2">
      <%= manager.enquiries.count %>
   </div>
   <div class="col-lg-2">
      <% if manager.is_deleted == false %>
        有効
      <% else %>
        退会
      <% end %>
   </div>
  </div>
 <% end %>

</div>