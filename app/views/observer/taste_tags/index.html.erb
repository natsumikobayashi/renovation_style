<div class="container">
  <div class="row">
    <div class="col">
      テイストタグ一覧
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @taste_tag, url: observer_taste_tags_path do |f| %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <th>名前</th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% @taste_tags.each do |taste_tag| %>
           <tr>
             <td><%= taste_tag.name %></td>
             <td><%= link_to '編集する', edit_observer_taste_tag_path(taste_tag.id) %> </td>
             <td></td>
           </tr>
           <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>