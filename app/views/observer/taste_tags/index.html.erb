<div class="container">
  <div class="page-tittle pt-5">
    テイストタグ一覧
  </div>

  <%= form_with model: @taste_tag, url: observer_taste_tags_path do |f| %>
   <%= render "layouts/error_messages", model: f.object,sort: ["名前"] %>
   <div class="form-group mt-3">
    <div class="row">
      <div class="col-lg-4">
        <%= f.text_field :name, :placeholder => "テイスト名(10文字以下)", class: 'form-control' %>
      </div>
      <div class="col-lg-3">
        <%= f.submit '新規登録', class: "submitButton" %>
      </div>
    </div>
   </div>
  <% end %>

  <div class="row text">
    <div class="col-lg-12 font-weight-bold">
      名前
    </div>
  </div>

  <% @taste_tags.each do |taste_tag| %>
   <div class="row text m-1">
     <div class="col-lg-4">
       <%= taste_tag.name %>
     </div>
     <div class="col-lg-3">
       <%= link_to '編集する', edit_observer_taste_tag_path(taste_tag.id), class: "btn" %>
     </div>
    </div>
  <% end %>

</div>